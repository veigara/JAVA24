<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory>
  <!-- sqlSessionFactory 
 数据库的方言 -->
  <property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
  <!-- 数据库的url -->
  <property name="connection.url">jdbc:mysql://localhost:3306/hibernate1</property>
  <!-- 驱动 -->
  <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
  <!-- 用户名 -->
  <property name="connection.username">root</property>
  <!-- 密码 -->
  <property name="connection.password">root</property>
  <!-- 自动生成数据库表 -->
  <property name="hbm2ddl.auto">update</property>
  <!-- 是否打印sql -->
  <property name="show_sql">true</property>
  <!-- sql格式化 -->
  <property name="format_sql">true</property>
  <!-- 验证实体类 -->
  <property name="javax.persistence.validation.mode">none</property>
  <!-- session的配置 -->
  <property name="current_session_context_class">thread</property>
  
  <mapping resource="com/web/mapping/Computer.hbm.xml"/>
  <mapping resource="com/web/mapping/Classes.hbm.xml"/>
  <mapping resource="com/web/mapping/Teacher.hbm.xml"/>
<mapping resource="com/web/mapping/Bread.hbm.xml"/>
<mapping resource="com/web/mapping/Category.hbm.xml"/>
<mapping resource="com/web/mapping/Menu.hbm.xml"/>
<mapping resource="com/web/mapping/Role.hbm.xml"/>
<mapping resource="com/web/mapping/Car.hbm.xml"/>
<mapping resource="com/web/mapping/Passenger.hbm.xml"/>
 </session-factory>
</hibernate-configuration>
